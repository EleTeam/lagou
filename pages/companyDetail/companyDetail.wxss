/* pages/companyDetail/companyDetail.wxss */
/* 公司简介-start */
.company {
  display: flex;
  border-bottom: 1px solid #e8e8e8;
  min-height: 10px;
  padding: 15px;
}

.company .item-desc {
  display: flex;
  justify-content: space-between;
}

.company .item-desc .desc-l {
  flex-grow: 1;
  max-width: 80%;
}

.company .item-desc .desc-l .title {
  margin-bottom: 5px;
  color: #333;
  font-size: 18px;
}

.company .location {
  font-size: 12px;
  color: #333;
  margin-right: 50px;
}

.company .location-icon {
  display: inline-block;
  width: 9px;
  height: 12px;
  background-position: -93px -22.5px;
}

.company .item-desc .desc-l .info {
  color: #888;
  font-size: 12px;
}

.company .item-desc .desc-r {
  flex-shrink: 0;
  margin-top: 10px;
  width: 23px;
  height: 29px;
}

.company .item-desc .desc-r .authentication {
  width: 23px;
  height: 29px;
  background-position: -222.5px -3.5px;
}
/* 公司简介-end */
/* 职位分类-start */
.position-type {
  padding: 15px;
  border-bottom: 1px solid #e8e8e8;
}

.position-type .header {
  margin-bottom: 15px;
  font-size: 14px;
  color: #555;
}

.position-type .h-item {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.position-type .v-item {
  margin-bottom: 5px;
  flex-basis: 32%;
  flex-shrink: 0;
  text-align: center;
  height: 40px;
  line-height: 40px;
  color: #00b38a;
  font-size: 16px;
  border-radius: 21px;
  background-color: #f5f5f5;
}

.position-type .selected {
  background-color: #00b38a;
  color: #fff;
}

.position-type .disabled  {
  color: #c4c4c4;
}
/* 职位分类-end */
/* 职位列表-start */
.position-item {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  height: 45px;
  border-bottom: 1px solid #e8e8e8;
}

.position-item .item-l {
  flex-basis: 65%;
  flex-shrink: 0;
}

.position-item .name {
  padding-top: 4px;
  color: #333;
  font-size: 16px;
}

.position-item .time {
  margin-top: 5px;
  color: #888;
  font-size: 10px;
}

.position-item .item-r {
  flex-basis: 30%;
  flex-shrink: 0;
  line-height: 40px;
  color: #00b38a;
  font-size: 17px;
  text-align: center;
}

.list-more {
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 15px;
}
/* 职位列表-end */
